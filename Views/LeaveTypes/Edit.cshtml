@model LeaveTypeVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Leave Type</h1>


<hr />
<div class="row">
    <div class="col-4 col-md-8">
        <form class="d-flex flex-column gap-3 " asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultDays" class="control-label"></label>
                <input asp-for="DefaultDays" class="form-control" />
                <span asp-validation-for="DefaultDays" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
      
            <div class="form-group d-flex gap-3">
                <a class="btn btn-dark" asp-action="Index">Back to List</a>
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
